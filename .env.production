# Application
DOMAIN=hoteltracker.org
ENVIRONMENT=production
DEBUG=false

# Database
POSTGRES_USER=hoteltracker
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=hoteltracker
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Settings
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Settings
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=notifications@hoteltracker.org

# Monitoring
PROMETHEUS_BASIC_AUTH_USER=admin
PROMETHEUS_BASIC_AUTH_PASSWORD=your-strong-password-here
GRAFANA_ADMIN_PASSWORD=your-strong-password-here

# Backup
BACKUP_S3_BUCKET=hoteltracker-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-west-2

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
